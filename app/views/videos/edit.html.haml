.container	
	%h1 Novo Vídeo
	%br
	= simple_form_for @video, remote: true do |f|
		%fieldset.form-group
			= f.label :Título
			= f.input_field :title, class: 'form-control'

		%fieldset.form-group
			= f.label :Url
			= f.input_field :url, class: 'form-control'
		
		= f.button :submit, class: 'btn btn-primary'
	%br

	= simple_form_for @video, remote: true do |f|
		= f.simple_fields_for :video_posts do |post|
			= post.input :title

	= link_to "Voltar", videos_path, class: "btn btn-primary"